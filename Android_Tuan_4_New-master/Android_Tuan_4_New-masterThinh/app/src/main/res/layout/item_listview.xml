<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgItemListView"
        android:layout_width="88dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/canaulau" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="55dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="TextView"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemListView"
        app:layout_constraintStart_toEndOf="@+id/imgItemListView"
        app:layout_constraintTop_toTopOf="@+id/imgItemListView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="56dp"
        android:layout_height="17dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="#E83030"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="74dp"
        android:layout_height="35dp"
        android:layout_marginStart="196dp"
        android:layout_marginLeft="196dp"
        android:background="#F31111"
        android:gravity="center"
        android:text="Chat"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemListView"
        app:layout_constraintStart_toEndOf="@+id/imgItemListView"
        app:layout_constraintTop_toTopOf="@+id/imgItemListView"
        app:layout_constraintVertical_bias="0.489"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>